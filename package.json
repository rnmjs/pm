{
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "pm -r build",
    "install": "pm build",
    "prepare": "fenge install",
    "release": "pm -r --no-git-checks publish --tag $(test -f .changeset/pre.json && jq -r '.tag' .changeset/pre.json || echo 'latest')",
    "style": "fenge",
    "style:update": "fenge -u",
    "test": "pm style && pm -r test"
  },
  "devDependencies": {
    "@changesets/cli": "2.29.2",
    "@rnm/pm": "workspace:*",
    "fenge": "0.7.8",
    "typescript": "5.8.3"
  },
  "engines": {
    "node": ">=22.14.0"
  },
  "devEngines": {
    "runtime": {
      "name": "node",
      "version": ">=22.14.0"
    },
    "packageManager": {
      "name": "pnpm",
      "version": "10.7.1"
    }
  }
}
